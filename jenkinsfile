pipeline {

    agent any 

    triggers {
            cron('H */2 * * *')
        }

    stages {

        stage("Checkout") {
            steps {
                checkout scm 
            }
        }

        stage("Installing") {
            steps {
                bat 'npm install'
            }
        }

        stage('Lint') {
            when { expression { fileExists('eslint.config.ts') || fileExists('.eslintrc') } }
            steps {
                bat 'npm run lint'
            }
        }

        stage("Typecheck") {
            when { expression { fileExists('tscofig.json') } }
            steps {
                bat 'npm run typecheck'
            }
        }

        stage("Prettier") {
            when { expression { fileExists('.prettierrc') } }
            steps {
                bat 'npm run format'
            }
        }

        stage("Testing") {
            steps {
                bat 'npm test'
            }
        }
    }

    post {
            always {
                publishHTML(target: [
                    reportName: 'WDIO HTML Report',
                    reportDir: 'reports\\html',
                    reportFiles: 'report.html',
                    keepAll: true,
                    alwaysLinkToLastBuild: true,
                    allowMissing: true
                ])
            }
        } 
}